# Database
MONGODB_URI=mongodb://localhost:27017/wapicalls
FORCE_MEMORY_STORE=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_min_32_chars
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# VAPI Configuration
VAPI_API_KEY=your_vapi_api_key_here
VAPI_ASSISTANT_ID=your_assistant_id_here
VAPI_PHONE_NUMBER_ID=your_phone_number_id_here

# VAPI Assistant Overrides (Optional)
VAPI_FIRST_MESSAGE=Hello! This is your AI assistant calling.
VAPI_SYSTEM_MESSAGE=You are a helpful AI assistant making a phone call.
VAPI_VOICE_PROVIDER=elevenlabs
VAPI_VOICE_ID=your_voice_id_here
VAPI_VOICE_STABILITY=0.8
VAPI_VOICE_SIMILARITY_BOOST=0.8
VAPI_VOICE_STYLE=0.5
VAPI_VOICE_USE_SPEAKER_BOOST=true

# Call Settings
VAPI_SILENCE_TIMEOUT_SECONDS=30
VAPI_MAX_DURATION_SECONDS=300
VAPI_RECORDING_ENABLED=true
VAPI_END_CALL_FUNCTION_ENABLED=true

# Polling Settings
VAPI_POLL_MAX_MS=180000
VAPI_POLL_INTERVAL_MS=3000
VAPI_POLL_GRACE_MS=15000

# Server Configuration
PORT=5000
NODE_ENV=development
